             x:Class="CustomRenderer.Help"
             BackgroundImage="bg.png">
    
    <ContentPage.Content>
        <AbsoluteLayout>
           
           
            <StackLayout Padding="10,10">
                
                    <Label VerticalOptions="CenterAndExpand" 
                   TextColor="DarkBlue"
                   FontSize="Medium"
